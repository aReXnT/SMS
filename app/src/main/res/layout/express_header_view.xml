<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/dp_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:background="@drawable/express_card_bg"
        android:foreground="?selectableItemBackground">

        <TextView
            android:id="@+id/express_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            style="@style/TextPrimary"
            android:text="@string/express_card_title"
            />
        <TextView
            android:id="@+id/packet_code_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextSecondary"
            android:text="@string/packet_code_title"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/self_packet_code_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextSecondary"
            android:text="@string/self_packet_code_title"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/packet_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/TextPrimary"
            android:text="123456"/>








    </LinearLayout>


</LinearLayout>